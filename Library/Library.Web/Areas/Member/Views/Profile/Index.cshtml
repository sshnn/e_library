@model MemberListDto


@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Member/Views/Shared/_MemberLayout.cshtml";
}

@if (TempData["message"] != null)
{
    <div class="alert alert-primary alert-dismissible fade show" role="alert">
        @TempData["message"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


<form class="w-75 mx-auto p-3" method="post" enctype="multipart/form-data">

    <input hidden asp-for="@Model.Id" />

    <div class="form-group">
        <label asp-for="@Model.FullName"></label>
        <span asp-validation-for="@Model.FullName" class="text-danger"></span>
        <input asp-for="@Model.FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.PhoneNumber"></label>
        <span asp-validation-for="@Model.PhoneNumber" class="text-danger"></span>
        <input asp-for="@Model.PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
        <input asp-for="@Model.Email" class="form-control" />
    </div>

    <div class="form-group mt-2">
        <div class="row">

            <div class="col-md-2"></div>

            <div class="col-md-4">
                <div>
                    <h5 class="text-center">Şu anki resminiz</h5>
                    <img src="~/img/@Model.Picture" style="height:10rem!important;" class="w-75" alt="@Model.FullName" />
                </div>
            </div>

            <div class="col-md-2"></div>

            <div class="col-md-4">
                <div id="alanOnizleme" style="display:none!important">
                    <h5 class="text-center">Seçtiğiniz resim</h5>
                    <img id="resimOnizleme" src="" style="height:10rem!important;" class="w-75" />
                </div>
            </div>


            <div class="col-md-12">
                <label>Resim Seç</label>
                <input type="file" class="form-control-file float-right" name="Resim" id="Resim" />
            </div>

        </div>

    </div>


    <div class="form-group mt-2">
        <button class="btn btn-primary" type="submit">Kaydet</button>

    </div>

    <div asp-validation-summary="ModelOnly"></div>


</form>

@section Javascript{

    <script type="text/javascript">
        $(document).ready(function () {
            $("#Resim").change(function () {
                $("#alanOnizleme").show()
                $("#resimOnizleme").attr('src', URL.createObjectURL(e.target.files[0]))
            });

        });

    </script>



}


