@model List<RequestListDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

@if (Model.Count > 0)
{
    @foreach (var request in Model)
    {
        <div class="alert alert-info alert-light p-3 my-1">

            <form method="post" asp-action="Index" asp-controller="Request" class="my-1">

                <p class="lead">

                    <input type="hidden" name="id" value="@request.Description" />

                    @request.Description

                    <button type="submit" name="requestId" value="@request.Id" class="btn btn-sm btn-info float-right">Detay</button>
                    
                </p>

            </form>
        </div>

    }
}
else
{
    <div class="alert alert-info alert-light p-3 my-1">
        <p class="lead">
            Okunmamış bildiriminiz bulunmamaktadır.
        </p>
    </div>
}

