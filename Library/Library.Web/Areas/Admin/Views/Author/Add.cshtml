@model AuthorAddDto

@{
    ViewData["Title"] = "Add";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form class="w-75 mx-auto p-3" method="post" enctype="multipart/form-data">

    <div class="form-group">
        <label asp-for="FullName">Ad Soyad</label>
        <span asp-validation-for="FullName" class="text-danger"></span>
        <input asp-for="FullName" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BirthDate">Doğum Tarihi</label>
        <span asp-validation-for="BirthDate" class="text-danger"></span>
        <input asp-for="BirthDate" type="date" id="birthyear" name="BirthYear" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="Nation">Ulus</label>
        <span asp-validation-for="Nation" class="text-danger"></span>
        <input asp-for="Nation" type="text" class="form-control" />
    </div>

    <div class="form-group">
        <div class="form-check form-check-inline">
            <input asp-for="Gender" class="form-check-input" type="radio" name="Gender" value="Bay">
            <label asp-for="Gender" class="form-check-label">Bay</label>
        </div>
        <div class="form-check form-check-inline">
            <input asp-for="Gender" class="form-check-input" type="radio" name="Gender" value="Bayan">
            <label asp-for="Gender" class="form-check-label">Bayan</label>
        </div>
    </div>


    <input type="submit" class="btn btn-sm btn-info" value="Ekle" />

</form>


