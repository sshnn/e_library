@model MemberSignUpDto


@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_StandartLayout.cshtml";
}

<form class="mx-auto mt-4 p-3 w-50 shadow" method="post" enctype="multipart/form-data">

    <h4 class="text-center">Kayıt Ol</h4>

    <div class="form-group">
        <label asp-for="FullName">Ad Soyad</label>
        <span asp-validation-for="FullName" class="text-danger"></span>
        <input asp-for="FullName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="UserName">Kullanıcı Adı</label>
        <span asp-validation-for="UserName" class="text-danger"></span>
        <input asp-for="UserName" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Password">Parola</label>
        <span asp-validation-for="Password" class="text-danger"></span>
        <input asp-for="Password" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="ConfirmPassword">Parola Tekrar</label>
        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
        <input asp-for="ConfirmPassword" type="password" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email">Email</label>
        <span asp-validation-for="Email" class="text-danger"></span>
        <input asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber">Telefon Numarası</label>
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
        <input asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="BirthYear">Doğum Tarihi</label>
        <span asp-validation-for="BirthYear" class="text-danger"></span>
        <input asp-for="BirthYear" type="date" id="birthyear" name="BirthYear" class="form-control">
    </div>

    <div>
        <label asp-for="Picture">Görsel</label>
        <span asp-validation-for="Picture" class="text-danger"></span>
        <input asp-for="Picture" type="file" class="form-control-file float-right" name="Picture" id="Picture" />
    </div>



    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <a asp-action="SignIn" asp-controller="Home" class="btn btn-sm btn-warning">Vazgeç</a>

    <input type="submit" class="btn btn-sm btn-info" value="Kayıt Ol" />

</form>




